<nav class="navbar navbar-expand-lg navbar-light">
  <%=link_to t("navbar.navbar-brand"), root_path, class: "navbar-brand"%>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"><i class="fa fa-navicon"></i></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%=link_to t("navbar.navbar-link-resources"), resources_path, class: "nav-link"%>
      </li>
      <li class="nav-item">
        <%=link_to t("navbar.navbar-link-projects"), projects_path, class: "nav-link"%>
      </li>
      <li class="nav-item dropdown">
        <%=link_to t("navbar.navbar-link-languages"), languages_path, class: "nav-link dropdown-toggle", id: "navbarDropdown", role: "button", dataToggle: "dropdown", ariaHaspopup: "true", ariaExpanded: "false"  %>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
        <% Language.all.each do |language| %>
        <%= link_to language.name.capitalize, language_path(language), class: "dropdown-item" %>
        <% end %>
        </div>
      </li>
      <li class="nav-item dropdown">
        <%=link_to t("navbar.navbar-link-technologies"), technologies_path, class: "nav-link dropdown-toggle", id: "navbarDropdown", role: "button", dataToggle: "dropdown", ariaHaspopup: "true", ariaExpanded: "false"  %>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
        <% Technology.all.each do |technology| %>
        <%= link_to technology.name.capitalize, technology_path(technology), class: "dropdown-item" %>
        <% end %>
        </div>
      </li>
      <li class="nav-item dropdown">
        <%=link_to t("navbar.navbar-link-frameworks"), frameworks_path, class: "nav-link dropdown-toggle", id: "navbarDropdown", role: "button", dataToggle: "dropdown", ariaHaspopup: "true", ariaExpanded: "false"  %>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
        <% Framework.all.each do |framework| %>
        <%= link_to framework.name.capitalize, framework_path(framework), class: "dropdown-item" %>
        <% end %>
        </div>
      </li>
      <li class="nav-item dropdown">
        <%=link_to t("navbar.navbar-link-dbs"), dbs_path, class: "nav-link dropdown-toggle", id: "navbarDropdown", role: "button", dataToggle: "dropdown", ariaHaspopup: "true", ariaExpanded: "false"  %>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
        <% Db.all.each do |db| %>
        <%= link_to db.name.capitalize, db_path(db), class: "dropdown-item" %>
        <% end %>
        </div>
      </li>
    </ul>
    <% if current_page?(resources_path) || current_page?(root_path)%>
    <form class="form-inline my-2 my-lg-0" >
      <input class="form-control mr-sm-2" type="search" placeholder = <%= t("navbar.navbar-search") %> aria-label="Search" id="search-item">
      <button class="btn btn-dark my-2 my-sm-0" type="submit" id="search-btn"><%= t("navbar.navbar-search") %></button>
    </form>
    <% end %>
    <% if I18n.locale == :it %>
    <form class="form-inline my-2 my-lg-0" >
      <% en_uri = request.fullpath.gsub('/it', '/en') %>
      <% good_link = en_uri[0, 3] == '/en' ? en_uri : root_en_path %>
      <%= link_to image_tag("uk.png"), good_link, class: "flag" %>
    <% else %>
      <% it_uri = request.fullpath.gsub('/en', '/it') %>
      <% good_link = it_uri[0, 3] == '/it' ? it_uri : root_it_path %>
      <%= link_to image_tag("it.png"), good_link, class: "flag"  %>
    </form>
    <% end %>
  </div>
</nav>