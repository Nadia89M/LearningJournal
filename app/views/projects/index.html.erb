<%- model_class = Project -%>
<div class="page-header">
  <h1><%=t("projects.index.title")%></h1>
</div>
<div class="new">
  <%= link_to t("projects.index.new", :default => t("helpers.links.new")),
              new_project_path,
              :class => 'btn btn-primary' %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t("projects.index.name") %></th>
      <th><%= t("projects.index.description") %></th>
      <th><%= t("projects.index.startdate") %></th>
      <th><%= t("projects.index.updated") %></th>
      <th><%= t("projects.index.actions", :default => t("helpers.actions")) %></th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td class="project-name"><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= project.start_date.strftime("%A, %b %d") if project.start_date.is_a?(Date) %></td>
        <td><%=time_ago_in_words(project.updated_at)%><%= t('projects.index.ago') %></td>
        <td>
          <%= link_to t("projects.index.show", :default => t("helpers.links.show")),
                      project_path(project), :class => 'btn btn-default btn-xs' %>
          <%= link_to t("projects.index.edit", :default => t("helpers.links.edit")),
                      edit_project_path(project), :class => 'btn btn-default btn-xs' %>
          <%= link_to t("projects.index.delete", :default => t("helpers.links.destroy")),
                      project_path(project),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>




