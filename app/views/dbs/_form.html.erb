<div class="row">
  <div class="col-md-12">
    <%= form_for(@db, :html => {class: "form-horizontal",
    role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-md-2 form-elem">
        <%= f.label t("dbs.form.name")%>
      </div>
      <div class="col-md-8">
        <%= f.text_field :name, id: "name", class: "form-control",
        placeholder: t("dbs.form.placeholder"), autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <%= f.submit(@db.new_record? ? t("dbs.form.add") : t("dbs.form.update"),
        class: "btn btn-danger btn-lg") %>
      </div>
    </div>
    <% end %>
    <div class="col-md-4 col-md-offset-4 colormatch">
      [ <%= link_to t("dbs.form.listing"),
      dbs_path %> ]
    </div>
  </div>
</div>