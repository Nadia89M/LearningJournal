<h1><%= @db.name %></h1>
<% if @db.resources.any? %>
  <h4 align="center"> <%= t("dbs.show.subtitle") %> <%= @db.name %> :</h4>
  <br/>
  <table class="elem-container">
    <tbody class="elem-body">
      <% @db.resources.each do |resource| %>
      <tr class="show-row-elem">
        <td class="elem-name"><i class="far fa-check-square check"></i>  <span class="resources-list"><%= resource.name %></span></td>       
        <td class="elem-action">
          <%= link_to t("dbs.show.show"), resource %>
          <%= link_to t("dbs.show.edit"), edit_resource_path(resource) %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
  <h4 align="center">No resources yet!</h4>
<% end %>