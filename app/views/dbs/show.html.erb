<h1><%= @db.name %></h1>
<% if @db.resources.count != 0 %>
  <h4 align="center">Resouces' containing <%= @db.name %></h4>
  <% @db.resources.each do |resource| %>
  <h4><%= resource.url %></h4>
  <%= link_to 'Show', resource %>
  <%= link_to 'Edit', edit_resource_path(resource) %>
  <% end %>
<% else %>
  <h4 align="center">No resources yet!</h4>
<% end %>