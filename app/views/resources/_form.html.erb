<%= form_for @resource, :html => { :class => "form-horizontal resource" } do |f| %>

  <% if @resource.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@resource.errors.count, "error") %> prohibited this resource from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @resource.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
    <%=f.error_span(:url) %>
  </div>
  <div class="form-group">
    <%= f.label :url, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :url, :class => 'form-control' %>
    </div>
    <%=f.error_span(:url) %>
  </div>
  <div class="form-group">
    <%= f.label :memo, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :memo, :class => 'form-control' %>
    </div>
    <%=f.error_span(:memo) %>
  </div>
  <div class="form-group">
    <%= f.label :image, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :image, :class => 'form-control' %>
    </div>
    <%=f.error_span(:image) %>
  </div>
  <div class="form-group">
    <%= f.label :document, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :document, :class => 'form-control' %>
    </div>
    <%=f.error_span(:document) %>
  </div>
  <div class="form-group">
  <div class="row">
    <div class="col-md-offset-2 col-md-8">
      <%= f.collection_check_boxes :language_ids, 
                                    Language.all, :id, :name do |cb| %>
<% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
      <% end %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-md-offset-2 col-md-8">
      <%= f.collection_check_boxes :technology_ids, 
                                    Technology.all, :id, :name do |cb| %>
<% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
      <% end %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-md-offset-2 col-md-8">
      <%= f.collection_check_boxes :framework_ids, 
                                    Framework.all, :id, :name do |cb| %>
<% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
      <% end %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="row">
    <div class="col-md-offset-2 col-md-8">
      <%= f.collection_check_boxes :db_ids, 
                                    Db.all, :id, :name do |cb| %>
<% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
      <% end %>
    </div>
  </div>
</div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                resources_path, :class => 'btn btn-default' %>
    </div>
  </div>
  
<% end %>
