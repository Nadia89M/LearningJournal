<%- model_class = Resource -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @resource.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
  <dd><%= @resource.url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:memo) %>:</strong></dt>
  <dd><%= @resource.memo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image) %>:</strong></dt>
  <dd><%= @resource.image %></dd>
  <dt><strong><%= model_class.human_attribute_name(:document) %>:</strong></dt>
  <dd><%= @resource.document %></dd>
  <dt><strong><%= model_class.human_attribute_name(:languages) %>:</strong></dt>
  <dd><% @resource.languages.each do |language| %>
      <%= link_to language.name, language_path(language) %>
      <% end %></dd>
  <dt><strong><%= model_class.human_attribute_name(:technologies) %>:</strong></dt>
  <dd><% @resource.technologies.each do |technology| %>
      <%= link_to technology.name, technology_path(technology) %>
      <% end %></dd>
  <dt><strong><%= model_class.human_attribute_name(:frameworks) %>:</strong></dt>
  <dd><% @resource.frameworks.each do |framework| %>
      <%= link_to framework.name, framework_path(framework) %>
      <% end %></dd>
  <dt><strong><%= model_class.human_attribute_name(:databases) %>:</strong></dt>
  <dd><% @resource.dbs.each do |db| %>
      <%= link_to db.name, db_path(db) %>
      <% end %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              resources_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_resource_path(@resource), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              resource_path(@resource),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
